{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build STM32C071",
            "type": "shell",
            "command": "make",
            "args": [
                "TARGET=stm32c071"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Clean STM32C071",
            "type": "shell",
            "command": "make",
            "args": [
                "TARGET=stm32c071",
                "clean"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "Clean All",
            "type": "shell",
            "command": "make",
            "args": [
                "clean-all"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}